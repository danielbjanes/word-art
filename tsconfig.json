{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "target": "ES2020",
      "module": "commonjs",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/__mocks__/*"]
  }
  